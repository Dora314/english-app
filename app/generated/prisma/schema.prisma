generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String                   @id @default(cuid())
  email          String                   @unique
  name           String?
  avatar         String?
  answers        UserAnswer[]
  wrongQuestions UserWrongdoingQuestion[]
  dashboard      UserDashboardData?
}

model UserAnswer {
  id             String   @id @default(cuid())
  userId         String
  questionId     String
  selectedAnswer String
  isCorrect      Boolean
  timestamp      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id])
  question       Question @relation(fields: [questionId], references: [id])
}

model UserWrongdoingQuestion {
  id                String   @id @default(cuid())
  userId            String
  questionId        String
  retestedCorrectly Boolean  @default(false)
  lastAttempted     DateTime @default(now())
  user              User     @relation(fields: [userId], references: [id])
  question          Question @relation(fields: [questionId], references: [id])
}

model UserDashboardData {
  id                    String @id @default(cuid())
  userId                String @unique
  totalPoints           Int    @default(0)
  previousSessionPoints Int    @default(0)
  pointsHistory         Json
  user                  User   @relation(fields: [userId], references: [id])
}

model Question {
  id            String                   @id @default(cuid())
  text          String
  options       String[]
  correctAnswer String
  topic         String
  createdAt     DateTime                 @default(now())
  answers       UserAnswer[]
  wrongAnswers  UserWrongdoingQuestion[]
}
